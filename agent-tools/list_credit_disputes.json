{
  "type": "function",
  "function": {
    "name": "list_credit_disputes",
    "description": "List all credit disputes with optional filtering by status or beneficiary, pagination, and sorting. Returns a paginated list of credit disputes.",
    "parameters": {
      "type": "object",
      "properties": {
        "page": {
          "type": "number",
          "description": "Page number for pagination (default: 1)"
        },
        "limit": {
          "type": "number",
          "description": "Number of results per page (default: 10, max: 100)"
        },
        "sortBy": {
          "type": "string",
          "description": "Field to sort by (default: created_at)"
        },
        "sortOrder": {
          "type": "string",
          "description": "Sort order (default: desc)",
          "enum": ["asc", "desc"]
        },
        "status": {
          "type": "string",
          "description": "Filter by dispute status (optional)",
          "enum": ["pending", "submitted", "investigating", "resolved", "rejected"]
        },
        "beneficiary_id": {
          "type": "string",
          "description": "Filter by beneficiary UUID (optional)"
        }
      }
    },
    "returns": {
      "type": "object",
      "properties": {
        "data": {
          "type": "array",
          "description": "Array of credit dispute objects"
        },
        "pagination": {
          "type": "object",
          "properties": {
            "page": { "type": "number" },
            "limit": { "type": "number" },
            "total": { "type": "number" },
            "totalPages": { "type": "number" }
          }
        }
      }
    },
    "api_endpoint": "GET /api/credit-disputes"
  }
}
