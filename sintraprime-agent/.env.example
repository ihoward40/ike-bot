# SintraPrime Agent Configuration
# Copy this file to .env and fill in your values

# Dashboard Server
SINTRA_PORT=5011
SINTRA_HOST=0.0.0.0

# Mode Persistence
MODE_FILE=./data/current_mode.json
HEARTBEAT_FILE=./logs/heartbeat.log
HEARTBEAT_INTERVAL=60

# IKE Bot Integration
IKE_BOT_FLASK_URL=http://localhost:5000
IKE_BOT_FASTAPI_URL=http://localhost:8000
IKE_BOT_NODE_URL=http://localhost:3000

# Make.com Integration
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your-webhook-id
MAKE_API_KEY=your_make_api_key

# Event Logging
LOG_LEVEL=info
LOG_DIR=./logs
EVENT_LOG_FILE=./memory/events_{{DATE}}.jsonl

# Authentication (optional)
API_KEY=your_sintra_api_key_here
ENABLE_AUTH=false

# Timezone
TZ=America/New_York
