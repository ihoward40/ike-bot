# SintraPrime v1: Activated Reality Mode Configuration
# Copy this file to .env and fill in your values

# ========================================
# CORE AGENT CONFIGURATION
# ========================================

# Root directory for all SintraPrime files
# Windows: C:\SintraPrime
# Linux/Mac: /opt/SintraPrime or ~/.sintraprime
SINTRA_ROOT=C:\SintraPrime

# Timezone (for time awareness)
TZ=America/New_York

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ========================================
# VOICE SYSTEM (PHASE 4: MOUTH)
# ========================================

# Enable/disable voice output
VOICE_ENABLED=true

# ElevenLabs Configuration (Primary Voice Engine)
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here
ELEVENLABS_MONTHLY_LIMIT=10000

# Edge TTS Voice (Fallback)
EDGE_VOICE=en-US-JennyNeural

# ========================================
# VISIBILITY SERVER (PHASE 6)
# ========================================

# Port for the web dashboard and webhook endpoint
VISIBILITY_PORT=7777

# ========================================
# LEGACY DASHBOARD (for backward compatibility)
# ========================================

# Dashboard Server
SINTRA_PORT=5011
SINTRA_HOST=0.0.0.0

# Mode Persistence
MODE_FILE=./data/current_mode.json
HEARTBEAT_FILE=./logs/heartbeat.log
HEARTBEAT_INTERVAL=60

# ========================================
# IKE BOT INTEGRATION
# ========================================

IKE_BOT_FLASK_URL=http://localhost:5000
IKE_BOT_FASTAPI_URL=http://localhost:8000
IKE_BOT_NODE_URL=http://localhost:3000

# ========================================
# EXTERNAL INTEGRATIONS
# ========================================

# Make.com Integration
MAKE_WEBHOOK_URL=https://hook.us1.make.com/your-webhook-id
MAKE_API_KEY=your_make_api_key

# ========================================
# AUTHENTICATION (optional)
# ========================================

API_KEY=your_sintra_api_key_here
ENABLE_AUTH=false
